<form method="post" novalidate>
    {{ form_start(form) }}
<div class="container mt-5">
    <h1>{{ button_label|default('Save') }} Category</h1>

    <div class="form-group">
        {{ form_label(form.name, 'Name of Category') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.name) %}
            <div class="alert alert-danger mt-2">
                {{ form_errors(form.name) }}
                <button type="button" class="btn btn-danger" onclick="confirmError('Name of Category')">OK</button>
            </div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.description) %}
            <div class="alert alert-danger mt-2">
                {{ form_errors(form.description) }}
                <button type="button" class="btn btn-danger" onclick="confirmError('Description')">OK</button>
            </div>
        {% endif %}
    </div>
    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}