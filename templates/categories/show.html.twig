{% extends 'backendbase.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Category Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categories_index') }}" class="btn btn-secondary">Back to List</a>

    <a href="{{ path('app_categories_edit', {'id': category.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('categories/_delete_form.html.twig') }}
</div>
{% endblock %}
