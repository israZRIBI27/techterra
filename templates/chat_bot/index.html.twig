{% extends 'base.html.twig' %}

{% block title %}ChatBot{% endblock %}

{% block body %}
<style>
    .chat-wrapper { 
        margin: 0 auto; 
        max-width: 900px; /* Increased max-width */
        font-family: Arial, sans-serif; 
        background-color: #f9f9f9; 
        border: 1px solid #ccc; 
        border-radius: 10px; /* Increased border-radius */
        box-shadow: 0 2px 5px rgba(0,0,0,0.1); 
    }
    .chat-header {
        background-color: #007bff; 
        color: #fff; 
        padding: 30px 30px; /* Increased padding */
        border-top-left-radius: 15px; /* Increased border-radius */
        border-top-right-radius: 15px; /* Increased border-radius */
    }
    .chat-body {
        padding: 30px; /* Increased padding */
        min-height: 400px; /* Increased min-height */
        max-height: 500px; /* Increased max-height */
        overflow-y: auto; 
        background-color: #fff; 
        border-bottom: 1px solid #ccc;
    }
    .chat-input {
        padding: 50px 50px; /* Increased padding */
        background-color: #f5f5f5; 
        border-bottom-left-radius: 10px; /* Increased border-radius */
        border-bottom-right-radius: 10px; /* Increased border-radius */
    }
    .chat-input textarea {
        width: calc(100% - 40px); 
        min-height: 80px; /* Increased min-height */
        resize: none; 
        border: 1px solid #ccc; 
        border-radius: 5px; 
        padding: 12px; /* Increased padding */
        font-size: 18px; /* Increased font-size */
        float: left;
    }
    .chat-input button {
        background-color: #007bff; 
        color: #fff; 
        border: none; 
        border-radius: 5px; 
        padding: 14px 30px; /* Increased padding */
        font-size: 18px; /* Increased font-size */
        cursor: pointer; 
        transition: background-color 0.3s; 
        float: right;
    }
    .chat-input button:hover {
        background-color: #0056b3;
    }
    
</style>


<div class="chat-wrapper">
    <div class="chat-header">
        <h1>ChatBot</h1>
    </div>
    <div class="chat-body">
       
            
            <div class="message-bot">
                {# Display the response text #}
                <p>{{ response }}</p>
            </div>
       
    </div>
    <form method="post" action="{{ path('app_chat_bot') }}">
        <div class="chat-input">
            <textarea id="message" name="message" placeholder="Type your message here..."></textarea>
            <button id="submit-btn" type="submit">Send</button>
        </div>
    </form>
</div>
{% endblock %}
