{% extends 'baseb.html.twig' %}

{% block title %}Edit Events{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="mb-4">Edit Events</h1>

                {{ include('events/_form.html.twig', {'button_label': 'Update'}) }}

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_events_list') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    {{ include('events/_delete_form.html.twig') }}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Update
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
