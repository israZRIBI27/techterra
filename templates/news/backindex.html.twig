{% extends 'backendbase.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
<div class="card p-3">
    <h1>News</h1>

    <table class="table">
        <thead>
            <tr>
                <th>title</th>
                <th>author</th>
                <th>content</th>
                <th>time</th>
                <th>reports</th>
                <th>views</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            {% for news in news %}
                <tr>
                    <td>{{ news.title }}</td>
                    <td>{{ news.author }}</td>
                    <td>{{ news.content }}</td>
                    <td>{{ news.time |date('Y-m-d H:i:s') }}</td>
                    <td>{{ news.reports }}</td>
                    <td>{{ news.views }}</td>
                    <td class="d-flex justify-content-start">
                        <form method="post" action="{{ path('app_news_deleteAdmin', {'idNews': news.idNews}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.idNews) }}">
                            <button class="btn btn-primary mr-2">Delete</button>
                        </form>
                        <a href="{{ path('app_news_edit', {'idNews': news.idNews}) }}" class="btn btn-primary"><i class="bi bi-pencil"></i> Update </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
<a href="{{ path('app_news_new') }}" class="btn btn-primary">Create new headline</a>

{% endblock %}
