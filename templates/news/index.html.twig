{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <!-- Team Start -->
    <div class="container-fluid bg-light py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-7" style="width:100%;">
                    <div class="row g-4">
                        {% for news in news %}
                            <div class="col-md-6">
                                <div class="row g-4">
                                    <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                        <div class="team-item bg-white text-center rounded p-4 pt-0">
                                            <h5 class="mb-0">{{ news.title }}</h5>
                                            <small>{{ news.author }} & {{ news.time ? news.time|date('Y-m-d H:i:s') : '' }}</small>
                                            <p>{{ news.content }}</p>
                                            <a class="btn btn-primary rounded-pill px-4" href="{{ path('app_news_show', {'id': news.idNews}) }}">show details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- Button to check RSS Feed -->
                <div class="col-lg-5">
                    <a href="{{ path('check_my_rss_feed') }}" class="btn btn-primary">Check RSS Feed</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Team End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top pt-2"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
{% endblock %}
