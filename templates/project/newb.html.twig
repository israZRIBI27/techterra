{% extends 'backendbase.html.twig' %}

{% block title %}New Project{% endblock %}
{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">New Project</h1>

            <div class="card-text">
                <form method="post" enctype="multipart/form-data">
                    {{ form_start(form) }}
                    
                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.categories) }}
                    {{ form_row(form.projet_fich) }}
                    
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </form>
            </div>
            
            <a href="{{ path('app_project_list') }}" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>
{% endblock %}