{% extends 'base.html.twig' %}

{% block title %}Envoyer un SMS{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Envoyer un SMS</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('send_sms') }}">
                        <div class="form-group">
                            <label for="number">Numéro de téléphone :</label>
                            <input type="text" name="number" id="number" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="panier_price">Prix du Panier :</label>
                            <input type="text" name="panier_price" id="panier_price" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Envoyer le SMS</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
