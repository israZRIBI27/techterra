<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4"> new Sponsor</h1>

                    <div class="form-container">
                        {{ form_start(form, {'attr': {'class': 'my-form', 'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': 'width: 100%;'}}) }}
                                {% if form_errors(form.nom) %}
                                    <div class="alert alert-danger mt-2">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'style': 'width: 100%;'}}) }}
                                {% if form_errors(form.montant) %}
                                    <div class="alert alert-danger mt-2">
                                        {{ form_errors(form.montant) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.idevenement, 'Event', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.idevenement, {'attr': {'class': 'form-control', 'style': 'width: 100%;'}}) }}
                                {% if form_errors(form.idevenement) %}
                                    <div class="alert alert-danger mt-2">
                                        {{ form_errors(form.idevenement) }}
                                    </div>
                                {% endif %}
                            </div>
                            <!-- Ajoute d'autres champs de formulaire ici selon tes besoins -->
                            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
