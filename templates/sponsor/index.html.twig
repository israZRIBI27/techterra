{% extends 'base.html.twig' %}

{% block title %}Sponsor index{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 style="font-family: Arial, sans-serif; font-size: 70px;">Liste de sponsors</h1>
    </div>
    <div class="text-center mt-3">
    <a href="{{ path('app_sponsor_export_excel') }}" class="btn btn-primary">
        <i class="fas fa-file-excel"></i> Export Excel
    </a>
</div>
    <div class="text-center mt-3">
        <a href="{{ path('app_sponsor_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create new
        </a>
    </div>

    <div class="row">
        {% for sponsor in sponsors %}
            <div class="col-md-4">
             <img class="img-fluid" src="{{asset('img/1.jpg')}}" alt="">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ sponsor.nom }}</h5>
                        <p class="card-text">Montant: {{ sponsor.montant }}</p>
                        <p class="card-text">Titre Event: {{ sponsor.idevenement.titreevent }}</p>
                        <a href="{{ path('app_sponsor_show', {'id': sponsor.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        <a href="{{ path('app_sponsor_edit', {'id': sponsor.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {{ include('sponsor/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p>No records found</p>
            </div>
        {% endfor %}
         {{knp_pagination_render(sponsors) }}
    </div>
    <style>
   span{margin: 0;padding: 0;}
        .pagination {
            display: flex;
            justify-content: center;
            list-style-type: none;
            padding: 0;
            gap:.25em;
        }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a {
            text-decoration: none;
            color: #007bff;
            border: 1px solid #007bff;
            padding: 6px 12px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .pagination a:hover {
            background-color: #007bff;
            color: #fff;
        }

        .pagination .current {
            font-weight: bold;
            background-color: #007bff;
            color: #fff;
            border: 1px solid #007bff;
            padding: 6px 12px;
            border-radius: 4px;
            margin-top: -7px;            }
</style>
{% endblock %}
