{% extends "_bases/base.html.twig" %}
{% block title %}Account Profile
{% endblock %}
{% block content %}
            {% for message in app.flashes('error') %}
                <div class="col-xs4">
                    <div class="p-3 my-2 rounded-2 error">{{message}}</div>
                </div>
            {% endfor %}
            <div class="col-xs4">
                <h1>Modification du mot de passe de {{ app.user.getusername }} </h1>
                <form method="post">
                    <div class="form-field">
                        <label for="pass">Mot de passe</label>
                        <input type="password" id="pass" name="pass" class="form-control">
                    </div>
                    <div class="form-field">
                        <label for="pass2">Confirmer le mot de passe</label>
                        <input type="password" id="pass2" name="pass2" class="form-control">
                    </div>
                    
                    <div class="form-field">
                        </br>
                        <button class="btn btn-success">Valider</button>
                    </div>

                </form>
            </div>
            
{% endblock %}