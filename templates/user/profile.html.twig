
{% extends 'base.html.twig' %}

{% block body %}


	



	<!--**********************************
	            Nav header end
	        ***********************************-->

	<!--**********************************
	            Header start
	        ***********************************-->
	<div class="header">
		<div class="header-content">
			<nav class="navbar navbar-expand">
				<div class="collapse navbar-collapse justify-content-between">
					<div class="header-left">
						<div class="search_bar dropdown">
							<span class="search_icon p-3 c-pointer" data-toggle="dropdown">
								<i class="mdi mdi-magnify"></i>
							</span>
							<div class="dropdown-menu p-0 m-0">
								<form>
									<input class="form-control" type="search" placeholder="Search" aria-label="Search">
								</form>
							</div>
						</div>
					</div>

					<ul class="navbar-nav header-right">

						<li class="nav-item dropdown header-profile">
							<a class="nav-link" href="#" role="button" data-toggle="dropdown">
								<i class="mdi mdi-account"></i>
							</a>
							<div class="dropdown-menu dropdown-menu-right">
								<a href="{{ path('app_user') }}" class="dropdown-item">
									<i class="icon-user"></i>
									<span class="ml-2">Profile
									</span>
								</a>
								<a href="./email-inbox.html" class="dropdown-item">
									<i class="icon-envelope-open"></i>
									<span class="ml-2">Inbox
									</span>
								</a>
								<a href="{{path('app_logout')}}" class="dropdown-item">
									<i class="icon-key"></i>
									<span class="ml-2">Logout
									</span>
								</a>
							</div>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>
{% block content %}{% for message in app.flashes('message')%}<div><div><div class="alert alert-success" role="alert">{{message}}</div></div><div/>{% endfor %}<div class="row"><div class="col-lg-12"><div class="profile"><div class="profile-head"><div class="profile-info">
<div class="row justify-content-left">
	<div class="col">
		<div class="card mb-3">
			<div class="row g-0">
				<div class="col-md-3 d-flex align-items-center justify-content-center">
					{% set profilePicture = app.user.getUserPicture %}
					<img src="{{ asset('Images/ProfileImages/' ~ profilePicture) }}" style="width:100px;height:auto;" class="img-fluid rounded-circle" alt="">
				</div>
				<div class="col-md-9">
					<div class="card-body">
						<div class="row">
							<div class="col-md-6">
								<h4 class="card-title text-primary">{{ app.user.getUserUsername }}</h4>
								<p class="card-text">
									{% for role in app.user.getRoles %}
										{% if role == "ROLE_USER" %}User
										{% elseif role == "ROLE_ADMIN" %}Admin
										{% endif %}
										{% if not loop.last %},
										{% endif %}
									{% endfor %}
								</p>
							</div>
							<div class="col-md-6">
								<div class="profile-info">
									<h5 class="card-title text-muted">{{ app.user.getEmail }}</h5>
									<p class="card-text">Email</p>
								</div>
								<div class="profile-info">
									<h5 class="card-title text-muted">{{ app.user.getUserphonenumber }}</h5>
									<p class="card-text">Phone No.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div></div></div></div></div></div><div class="row"><div class="col-lg-12"><div class="card"><div class="card-header"><h4 class="card-title">Edit your Profile!</h4></div>{{form_start(form)}}<div class="card-body"><div class="form-validation">
<form class="form-valide" method="post">
	{{form_start(form, )}}

	<div class="row">
		<div class="col-xl-6">
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-username">Username
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_username, {'attr': {'class': 'form-control'}}) }}

				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Email
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Firt Name:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_firstname, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Last Name:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_lastname, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row mt-5" style="flex-direction:row;gap:1rem;">
				<div style="display: contents;">
					<button type="submit" class="btn btn-success">Apply Changes</button>
				</div>
				<div style="display: contents;">
					<a class="btn btn-danger" href="{{path('app_user_editpassword')}}">Edit Password</a>
				</div>
			</div>
		</div>

		<div class="col-xl-6">
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-skill">Gender
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_gender, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">Profile Picture:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_picture, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-website">Birthday:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_birthday, {'attr': {'class': 'form-control'}})  }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-phoneus">Phone:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_phonenumber, {'attr': {'class': 'form-control'}}) }}

				</div>
			</div>



			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			
			
		</div>
	</div>
	{{form_end(form)}}
</form></div></div></div></div><script src="vendor/global/global.min.js"></script><script src="js/quixnav-init.js"></script><script src="js/custom.min.js"></script><script src="vendor/raphael/raphael.min.js"></script><script src="vendor/morris/morris.min.js"></script><script src="vendor/circle-progress/circle-progress.min.js"></script><script src="vendor/chart.js/Chart.bundle.min.js"></script><script src="vendor/gaugeJS/dist/gauge.min.js"></script><!--  flot-chart js --><script src="vendor/flot/jquery.flot.js"></script><script src="vendor/flot/jquery.flot.resize.js"></script><!-- Owl Carousel --><script src="vendor/owl-carousel/js/owl.carousel.min.js"></script><!-- Counter Up --><script src="vendor/jqvmap/js/jquery.vmap.min.js"></script><script src="vendor/jqvmap/js/jquery.vmap.usa.js"></script><script src="vendor/jquery.counterup/jquery.counterup.min.js"></script><script src="js/dashboard/dashboard-1.js"></script></div></div></div></body>{% endblock %}
{% endblock %}