	{{form_start(form, )}}

	<div class="row">
		<div class="col-xl-6">
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-username">Username
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_username, {'attr': {'class': 'form-control'}}) }}

				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Email
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Firt Name:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_firstname, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-email">Last Name:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_lastname, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		</div>

		<div class="col-xl-6">
			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-skill">Best Skill
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_gender, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-currency">Profile Picture:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_picture, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-website">Birthday:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_birthday, {'attr': {'class': 'form-control'}})  }}
				</div>
			</div>

			<div class="form-group row">
				<label class="col-lg-4 col-form-label" for="val-phoneus">Phone:
					<span class="text-danger">*</span>
				</label>
				<div class="col-lg-6">
					{{ form_widget(form.user_phonenumber, {'attr': {'class': 'form-control'}}) }}

				</div>
			</div>


